<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:seekBarStyle">@style/SeekBarAppTheme</item>
    </style>

    <style name="YamaTenkiActivity">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/yama_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ScreenTitle" parent="android:TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">42sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/yama_brown</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="MenuButton">
        <item name="android:gravity">center</item>
        <item name="layout_widthPercent">39%</item>
        <item name="layout_heightPercent">13%</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainButtonLeft" parent="MenuButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="layout_heightPercent">16%</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="MainButtonRight" parent="MenuButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="layout_heightPercent">16%</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="AreaButtonLeft" parent="MenuButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="AreaButtonRight" parent="MenuButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="RatingButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/yama_brown</item>
    </style>

    <style name="BrownText">
        <item name="android:textColor">@color/yama_brown</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SmallestBrownText" parent="BrownText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SmallBrownText" parent="BrownText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MediumBrownText" parent="BrownText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LargeBrownText" parent="BrownText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ForecastTableHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/yama_brown</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ForecastTableLeftSideColumn" parent="SmallBrownText">
        <item name="android:background">@color/table_bg_alt</item>
        <item name="android:layout_weight">0.30</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ForecastTableSmallImage">
        <item name="android:layout_weight">0.05</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ForecastTableText" parent="LargeBrownText">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">0.15</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ForecastTableTextSmall" parent="ForecastTableText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ForecastTableImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.15</item>
    </style>

    <style name="CustomTimePickerDialogTheme">
        <item name="bpMainColor1">@android:color/white</item>
        <item name="bpMainColor2">@color/memo_date_bg</item>
        <item name="bpAccentColor">@color/memo_date_text</item>
        <item name="bpMainTextColor">@color/memo_date_text</item>
        <item name="bpLineColor">@color/memo_date_bg</item>
        <item name="bpDoneBackgroundColor">@android:color/white</item>
        <item name="bpSelectionAlpha">102</item>
    </style>
    <style name="RatingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/yama_background</item>
        <item name="android:textColor">@color/yama_brown</item>
    </style>
    <style name="SocialDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/yama_brown</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowTitleStyle">@style/SocialDialogTitle</item>
    </style>
    <style name="SocialDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/yama_background</item>
    </style>
    <style name="SeekBarAppTheme" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_holo_light</item>
        <item name="android:thumb">@drawable/scrubber_control_selector_holo_light</item>
    </style>
</resources>
