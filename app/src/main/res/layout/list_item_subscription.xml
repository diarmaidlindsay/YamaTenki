<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/yama_background"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/subscription_period"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="39%"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_subscription"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_automatic_renewal"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/subscription_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/subscription_period"
        android:layout_toEndOf="@id/subscription_period"
        android:layout_centerVertical="true"
        app:layout_widthPercent="39%"
        android:background="@color/yama_background"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/text_monthly_cost"
            android:textColor="@color/yama_brown"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/text_payment_amount"
            android:textColor="@color/yama_brown"
            android:textSize="13sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_discount"
        android:layout_toRightOf="@id/subscription_price"
        android:layout_toEndOf="@id/subscription_price"
        android:padding="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        app:layout_widthPercent="22%"
        android:adjustViewBounds="true"
        android:background="@color/yama_background"/>

</android.support.percent.PercentRelativeLayout>