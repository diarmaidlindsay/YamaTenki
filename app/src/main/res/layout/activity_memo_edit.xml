<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    style="@style/YamaTenkiActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/memo_header"
        style="@style/ScreenTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_memo_header"/>

    <TextView
        android:id="@+id/text_memo_mountain_name"
        style="@style/LargeBrownText"
        android:layout_width="wrap_content"
        android:layout_below="@id/memo_header"
        android:layout_centerHorizontal="true"
        android:text="@string/text_unset"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/text_memo_time"
        style="@style/MediumBrownText"
        android:text="@string/text_memo_time_edit"
        android:layout_below="@id/text_memo_mountain_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/memo_date_from"
        style="@style/MediumBrownText"
        android:inputType="datetime"
        android:focusable="false"
        android:layout_width="0dp"
        app:layout_widthPercent="60%"
        android:background="@drawable/round_edittext"
        android:textColorHint="@color/hint_text"
        android:layout_below="@id/text_memo_mountain_name"
        android:layout_toRightOf="@id/text_memo_time"
        android:layout_toEndOf="@id/text_memo_time"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignBaseline="@id/text_memo_time"/>

    <TextView
        android:id="@+id/text_memo_from"
        style="@style/MediumBrownText"
        android:text="@string/text_memo_from"
        android:layout_below="@id/text_memo_mountain_name"
        android:layout_toRightOf="@id/memo_date_from"
        android:layout_toEndOf="@id/memo_date_from"
        android:layout_alignBaseline="@id/memo_date_from"/>

    <EditText
        android:id="@+id/memo_date_until"
        style="@style/MediumBrownText"
        android:inputType="datetime"
        android:focusable="false"
        android:layout_width="0dp"
        app:layout_widthPercent="60%"
        android:background="@drawable/round_edittext"
        android:textColorHint="@color/hint_text"
        android:layout_below="@id/memo_date_from"
        android:layout_toRightOf="@id/text_memo_time"
        android:layout_toEndOf="@id/text_memo_time"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/text_memo_until"
        style="@style/MediumBrownText"
        android:text="@string/text_memo_until"
        android:layout_below="@id/memo_date_from"
        android:layout_toRightOf="@id/memo_date_until"
        android:layout_toEndOf="@id/memo_date_until"
        android:layout_alignBaseline="@id/memo_date_until"/>

    <TextView
        android:id="@+id/text_memo_activity_time"
        style="@style/MediumBrownText"
        android:visibility="invisible"
        android:text="@string/text_memo_activity_time"
        android:layout_below="@id/memo_date_until"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/memo_activity_time"
        style="@style/MediumBrownText"
        android:visibility="invisible"
        android:layout_below="@id/memo_date_until"
        android:layout_toRightOf="@id/text_memo_activity_time"
        android:layout_toEndOf="@id/text_memo_activity_time"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignBaseline="@id/text_memo_activity_time"/>

    <TextView
        android:id="@+id/text_memo_weather"
        style="@style/MediumBrownText"
        android:text="@string/text_memo_weather_edit"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/memo_activity_time"/>

    <EditText
        android:id="@+id/memo_weather"
        style="@style/MediumBrownText"
        android:inputType="text"
        app:layout_widthPercent="40%"
        android:background="@drawable/round_edittext"
        android:hint="@string/text_weather_hint"
        android:textColorHint="@color/hint_text"
        android:layout_below="@id/memo_activity_time"
        android:layout_toRightOf="@id/text_memo_weather"
        android:layout_toEndOf="@id/text_memo_weather"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignBaseline="@id/text_memo_weather"/>

    <TextView
        android:id="@+id/text_memo_rating"
        style="@style/MediumBrownText"
        android:text="@string/text_memo_rating_edit"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/memo_weather"/>

    <EditText
        android:id="@+id/memo_rating"
        style="@style/MediumBrownText"
        android:inputType="none"
        android:focusable="false"
        app:layout_widthPercent="15%"
        android:background="@drawable/round_edittext"
        android:hint="@string/text_rating_hint"
        android:textColorHint="@color/hint_text"
        android:maxLength="2"
        android:layout_below="@id/memo_weather"
        android:layout_toRightOf="@id/text_memo_rating"
        android:layout_toEndOf="@id/text_memo_rating"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:layout_alignBaseline="@id/text_memo_rating"/>

    <TextView
        style="@style/MediumBrownText"
        android:text="@string/text_memo_ten_points"
        android:layout_toRightOf="@id/memo_rating"
        android:layout_toEndOf="@id/memo_rating"
        android:layout_below="@id/memo_weather"
        android:layout_alignBaseline="@id/memo_rating"/>

    <TextView
        android:id="@+id/text_memo_memo"
        style="@style/MediumBrownText"
        android:text="@string/text_memo_memo_edit"
        android:layout_below="@id/memo_rating"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/memo_memo"
        style="@style/MediumBrownText"
        android:layout_width="fill_parent"
        app:layout_heightPercent="30%"
        android:hint="@string/text_memo_hint"
        android:textColorHint="@color/hint_text"
        android:background="@drawable/round_edittext"
        android:layout_below="@id/text_memo_memo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:gravity="start"
        android:padding="5dp"/>

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_confirm"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/round_button_orange"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@id/memo_memo"
        android:layout_alignRight="@id/memo_memo"
        android:layout_alignEnd="@id/memo_memo"/>

    <Button
        android:id="@+id/button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_edit"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/round_button_green"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@id/memo_memo"
        android:layout_alignRight="@id/memo_memo"
        android:layout_alignEnd="@id/memo_memo"/>

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_delete"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/round_button_gray"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@id/memo_memo"
        android:layout_centerHorizontal="true"/>

</android.support.percent.PercentRelativeLayout>