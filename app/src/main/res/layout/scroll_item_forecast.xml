<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yama_background"
    android:paddingBottom="20dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forecast_header"
        android:text="@string/text_unset"
        style="@style/ForecastTableHeader" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:stretchColumns="0"
        android:id="@+id/forecast_table">

        <TableRow>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/ForecastTableLeftSideColumn"
                    android:text="@string/text_forecast_table_time"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:id="@+id/forecast_time_00"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:id="@+id/forecast_time_03"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:id="@+id/forecast_time_06"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:id="@+id/forecast_time_09"/>
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/ForecastTableLeftSideColumn"
                    android:text="@string/text_forecast_table_difficulty"/>
                <ImageView
                    style="@style/ForecastTableImage"
                    android:src="@drawable/difficulty_blank_small"
                    android:id="@+id/forecast_difficulty_00"/>
                <ImageView
                    style="@style/ForecastTableImage"
                    android:src="@drawable/difficulty_blank_small"
                    android:id="@+id/forecast_difficulty_03"/>
                <ImageView
                    style="@style/ForecastTableImage"
                    android:src="@drawable/difficulty_blank_small"
                    android:id="@+id/forecast_difficulty_06"/>
                <ImageView
                    style="@style/ForecastTableImage"
                    android:src="@drawable/difficulty_blank_small"
                    android:id="@+id/forecast_difficulty_09"/>
            </LinearLayout>
        </TableRow>
        <include
            android:id="@+id/forecast_low_row_height"
            layout="@layout/row_forecast_height" />
        <include
            android:id="@+id/forecast_low_row_temperature"
            layout="@layout/row_forecast_temperature" />
        <include
            android:id="@+id/forecast_low_row_wind"
            layout="@layout/row_forecast_wind"/>
        <include
            android:id="@+id/forecast_mid_row_height"
            layout="@layout/row_forecast_height" />
        <include
            android:id="@+id/forecast_mid_row_temperature"
            layout="@layout/row_forecast_temperature" />
        <include
            android:id="@+id/forecast_mid_row_wind"
            layout="@layout/row_forecast_wind" />
        <include
            android:id="@+id/forecast_high_row_height"
            layout="@layout/row_forecast_height" />
        <include
            android:id="@+id/forecast_high_row_temperature"
            layout="@layout/row_forecast_temperature" />
        <include
            android:id="@+id/forecast_high_row_wind"
            layout="@layout/row_forecast_wind"/>
        <TableRow android:layout_marginTop="10dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/ForecastTableLeftSideColumn"
                    android:text="@string/text_forecast_rain_level"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:id="@+id/forecast_rain_level_00"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:id="@+id/forecast_rain_level_03"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:id="@+id/forecast_rain_level_06"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:id="@+id/forecast_rain_level_09"/>
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/ForecastTableLeftSideColumn"
                    android:text="@string/text_forecast_cloud_cover"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:id="@+id/forecast_cloud_cover_00"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:id="@+id/forecast_cloud_cover_03"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:id="@+id/forecast_cloud_cover_06"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:id="@+id/forecast_cloud_cover_09"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>