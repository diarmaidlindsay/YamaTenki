<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yama_background">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forecast_header"
        android:text="@string/text_unset"
        style="@style/ForecastTableHeader" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:stretchColumns="0">

        <TableRow>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/ForecastTableLeftSideColumn"
                    android:text="@string/text_forecast_table_time"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:text="@string/text_unset"
                    android:id="@+id/forecast_time1"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:text="@string/text_unset"
                    android:id="@+id/forecast_time2"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:text="@string/text_unset"
                    android:id="@+id/forecast_time3"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:text="@string/text_unset"
                    android:id="@+id/forecast_time4"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:text="@string/text_unset"
                    android:id="@+id/forecast_time5"/>
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/ForecastTableLeftSideColumn"
                    android:text="@string/text_forecast_table_difficulty"/>
                <ImageView
                    style="@style/ForecastTableImage"
                    android:id="@+id/forecast_difficulty_1"
                    android:src="@drawable/c_grade"/>
                <ImageView
                    style="@style/ForecastTableImage"
                    android:id="@+id/forecast_difficulty_2"
                    android:src="@drawable/b_grade"/>
                <ImageView
                    style="@style/ForecastTableImage"
                    android:id="@+id/forecast_difficulty_3"
                    android:src="@drawable/a_grade"/>
                <ImageView
                    style="@style/ForecastTableImage"
                    android:id="@+id/forecast_difficulty_4"
                    android:src="@drawable/b_grade"/>
                <ImageView
                    style="@style/ForecastTableImage"
                    android:id="@+id/forecast_difficulty_5"
                    android:src="@drawable/c_grade"/>
            </LinearLayout>
        </TableRow>
        <include
            android:id="@+id/forecast_peak_row"
            layout="@layout/row_forecast_wind_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <include
            android:id="@+id/forecast_base_row"
            layout="@layout/row_forecast_wind_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TableRow>
            <TextView style="@style/SmallBrownText"
                android:id="@+id/forecast_closest_city_weather_info"
                android:textColor="@android:color/darker_gray"
                android:text="@string/text_forecast_closest_city_weather_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="start"
                android:textStyle="bold" />
        </TableRow>
        <TableRow>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/ForecastTableLeftSideColumnGray"
                    android:text="@string/text_forecast_weather"/>
                <ImageView
                    style="@style/ForecastTableImage"
                    android:id="@+id/forecast_picture_weather_1"
                    android:src="@drawable/a_grade"/>
                <ImageView
                    style="@style/ForecastTableImage"
                    android:id="@+id/forecast_picture_weather_2"
                    android:src="@drawable/b_grade"/>
                <ImageView
                    style="@style/ForecastTableImage"
                    android:id="@+id/forecast_picture_weather_3"
                    android:src="@drawable/c_grade"/>
                <ImageView
                    style="@style/ForecastTableImage"
                    android:id="@+id/forecast_picture_weather_4"
                    android:src="@drawable/b_grade"/>
                <ImageView
                    style="@style/ForecastTableImage"
                    android:id="@+id/forecast_picture_weather_5"
                    android:src="@drawable/c_grade"/>
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/ForecastTableLeftSideColumnGray"
                    android:text="@string/text_forecast_atmospheric_temperature"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:text="@string/text_unset"
                    android:id="@+id/forecast_atmospheric_temp_1"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:text="@string/text_unset"
                    android:id="@+id/forecast_atmospheric_temp_2"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:text="@string/text_unset"
                    android:id="@+id/forecast_atmospheric_temp_3"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:text="@string/text_unset"
                    android:id="@+id/forecast_atmospheric_temp_4"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:text="@string/text_unset"
                    android:id="@+id/forecast_atmospheric_temp_5"/>
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/ForecastTableLeftSideColumnGray"
                    android:text="@string/text_forecast_chance_of_rain"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:text="@string/text_unset"
                    android:id="@+id/forecast_rain_chance_1"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:text="@string/text_unset"
                    android:id="@+id/forecast_rain_chance_2"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:text="@string/text_unset"
                    android:id="@+id/forecast_rain_chance_3"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:text="@string/text_unset"
                    android:id="@+id/forecast_rain_chance_4"/>
                <TextView
                    style="@style/ForecastTableText"
                    android:text="@string/text_unset"
                    android:id="@+id/forecast_rain_chance_5"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>