<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="20dp">
    <TextView
        android:id="@+id/help_text"
        style="@style/MediumBrownText"
        android:text="@string/help_text_difficulty"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <TableLayout
        android:id="@+id/help_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:background="@color/yama_brown">
        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/text_forecast_table_difficulty"
                style="@style/SmallBrownText"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="5dp"
                android:background="@color/yama_brown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"/>
            <TextView
                android:text="A"
                style="@style/MediumBrownText"
                android:textStyle="bold"
                android:padding="5dp"
                android:gravity="center"
                android:background="@color/sub_year"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                tools:ignore="HardcodedText"/>
            <TextView
                android:text="B"
                style="@style/MediumBrownText"
                android:textStyle="bold"
                android:padding="5dp"
                android:gravity="center"
                android:background="@color/sub_6month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                tools:ignore="HardcodedText"/>
            <TextView
                android:text="C"
                style="@style/MediumBrownText"
                android:textStyle="bold"
                android:padding="5dp"
                android:gravity="center"
                android:background="@color/sub_1month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                tools:ignore="HardcodedText"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:text="@string/table_help_temperature"
                style="@style/SmallBrownText"
                android:gravity="center"
                android:padding="5dp"
                android:background="@color/table_bg_alt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:text="~-5"
                style="@style/MediumBrownText"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/table_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText"/>
            <TextView
                android:text="-6~-10"
                style="@style/MediumBrownText"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/table_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText"/>
            <TextView
                android:text="-11~-15"
                style="@style/MediumBrownText"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/table_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:text="@string/table_help_wind_speed"
                style="@style/SmallBrownText"
                android:gravity="center"
                android:padding="5dp"
                android:background="@color/table_bg_alt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:text="0~7"
                style="@style/MediumBrownText"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/table_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText"/>
            <TextView
                android:text="8~14"
                style="@style/MediumBrownText"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/table_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText"/>
            <TextView
                android:text="15~"
                style="@style/MediumBrownText"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/table_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:text="@string/table_help_rain_level"
                style="@style/SmallBrownText"
                android:gravity="center"
                android:padding="5dp"
                android:background="@color/table_bg_alt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:text="0~0.2"
                style="@style/MediumBrownText"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/table_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText"/>
            <TextView
                android:text="0.3~0.6"
                style="@style/MediumBrownText"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/table_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText"/>
            <TextView
                android:text="0.7~"
                style="@style/MediumBrownText"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/table_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText"/>
        </TableRow>
    </TableLayout>
</LinearLayout>