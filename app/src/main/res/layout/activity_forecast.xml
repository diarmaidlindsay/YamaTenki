<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yama_background">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_unset"
        style="@style/ScreenTitle" />

    <ImageView
        android:layout_width="207dp"
        android:layout_height="162dp"
        android:layout_gravity="center"
        android:contentDescription="@string/text_search_table_header_difficulty"
        android:id="@+id/mountain_forecast_current_difficulty"
        android:src="@drawable/a_difficulty"/>

    <TextView
        style="@style/SmallBrownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_search_table_header_difficulty"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scroll_forecasts">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/today_forecast"
                layout="@layout/scroll_item_forecast"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

            <include
                android:id="@+id/tomorrow_forecast"
                layout="@layout/scroll_item_forecast"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>