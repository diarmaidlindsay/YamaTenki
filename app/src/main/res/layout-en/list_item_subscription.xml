<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/yama_background"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/subscription_block"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@id/image_discount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="35%"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_subscription"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/price_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="45%"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/subscription_block"
        android:layout_toEndOf="@id/subscription_block">

        <TextView
            android:id="@+id/price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/text_payment_amount"
            android:textColor="@color/yama_brown"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/text_monthly_cost"
            android:textColor="@color/yama_brown"
            android:textSize="20sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_discount"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/price_block"
        android:padding="0dp"
        android:layout_width="0dp"
        app:layout_widthPercent="18%"
        android:layout_height="wrap_content"/>

</android.support.percent.PercentRelativeLayout>