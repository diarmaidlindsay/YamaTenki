<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pulseanddecibels.jp.yamatenki">

    <application android:allowBackup="true" android:fullBackupContent="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:theme="@style/AppTheme">
        <!-- Splash Screen -->
        <activity
            android:name="pulseanddecibels.jp.yamatenki.activity.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main activity -->
        <activity
            android:name="pulseanddecibels.jp.yamatenki.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>

        <!-- Mountain Search Activity -->
        <activity android:name=".activity.MountainSearchActivity"
            android:label="@string/app_name">

        </activity>

        <!-- Mountain Detail Activity -->
        <activity android:name=".activity.MountainDetailActivity"
            android:label="@string/app_name">

        </activity>
    </application>

</manifest>
